doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
        link(rel="stylesheet", href="/public/css/style.css")
        title Noom
    body 
        header 
            h1 Noom
        main
            div#nicknameDiv
                form#nicknameForm
                    input(placeholder="Write Your Nickname!", required, type="text")
                    button Send
            div#welcome
                form#welcomeForm
                    input(placeholder="room name", required, type="text", maxlength="20")
                    button Enter room
            div#call
                div#myStream
                    video#myFace(autoplay, playsinLine, width="400" height ="400")
                    video#peersFace(autoplay, playsinLine, width="400" height ="400")
                div#functions
                    button#mute Mute
                    button#camera Camera Off
                    div#videoSelect
                        select#cameras
                div#chatBox
                    form#chatForm
                        ul
                        span
                            input(placeholder="Write Message!", required, type="text", maxlength="100")
                            button Send
        script(src="/socket.io/socket.io.js") 
        script(src="/public/js/app.js") 